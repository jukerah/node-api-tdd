{
  "exclude": ["coverage", "./dist", "__tests__", "jest.config.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": ["@types", "./node_modules/@types", "./typings"],
    "types": ["node", "jest", "express"],
    "checkJs": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "rootDirs": ["src"],
    "paths": {
      "@/*": ["*"]
    },
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "@types"]
}
